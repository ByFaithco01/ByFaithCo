rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /contacts/{docId} {
      allow create: if true;
      allow read, delete: if request.auth != null;
    }
    match /{document=**} {
      allow read: if true;
    }
  }
}
